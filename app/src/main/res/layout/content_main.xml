<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fleming.androidintent.MainActivity"
    android:orientation="vertical"
    android:id="@+id/bg_content"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/bt_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动拨号" />

    <Button
        android:id="@+id/bt_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动拨号界面" />

    <Button
        android:id="@+id/bt_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动联系人" />

    <Button
        android:id="@+id/bt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动短信" />

    <Button
        android:id="@+id/bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动拍照" />

    <Button
        android:id="@+id/bt_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动相册" />

    <Button
        android:id="@+id/bt_browser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动浏览器" />

    <Button
        android:id="@+id/bt_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动设置" />

    <Button
        android:id="@+id/bt_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动文件管理器" />
</LinearLayout>
